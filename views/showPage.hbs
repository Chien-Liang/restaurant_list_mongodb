<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a
          href="{{ restaurant.google_map }}"
          class="text-secondary"
          target="_blank"
        >
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5">
        {{ restaurant.description }}
      </p>

      <img
        class="rounded mx-auto d-block mb-4 w-100"
        src="{{ restaurant.image }}"
        alt="{{ restaurant.name }}"
        style="max-width: 600px"
      />
    </div>
  </div>
</div>

<!-- Functional Buttons -->
<div class="functional-buttons-right">
  <!-- The edit button toggle edit-form-modal -->
  <button
    type="button"
    title="編輯"
    class="btn btn-outline-info btn-lg my-2 mx-2"
    data-toggle="modal"
    data-target="#modalEdit"
    data-usage="edit"
    data-id="{{ restaurant._id }}"
    data-name="{{ restaurant.name }}"
    data-name_en="{{ restaurant.name_en }}"
    data-category="{{ restaurant.category }}"
    data-phone="{{ restaurant.phone }}"
    data-rating="{{ restaurant.rating }}"
    data-image="{{ restaurant.image }}"
    data-google_map="{{ restaurant.google_map }}"
    data-location="{{ restaurant.location }}"
    data-description="{{ restaurant.description }}"
    onclick="getInfo(this)"
  >
    <i class="fas fa-edit"></i>
  </button>
  <!-- The delete button toggle delete-certify-modal -->
  <button
    type="button"
    title="刪除"
    class="btn btn-outline-secondary btn-lg my-2 mx-2"
    data-toggle="modal"
    data-target="#modalDelete"
    data-usage="delete"
    data-id="{{ restaurant._id }}"
    onclick="getIdAndSetupRoute(this)"
  >
    <i class="fas fa-trash-alt"></i>
  </button>
  <!-- HomePage Button -->
  <a
    class="btn btn-outline-primary btn-lg my-2 mx-2"
    href="/"
    role="button"
    title="回首頁"
    ><i class="fas fa-home"></i
  ></a>
</div>

<!-- Modal-Delete -->
<div
  class="modal fade"
  id="modalDelete"
  tabindex="-1"
  aria-labelledby="delete-certify-modal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-certify-modal">
          注意！即將刪除餐廳資料！
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <form method="POST" style="display: inline" id="form-delete">
          <button type="submit" class="btn btn-outline-danger">刪除</button>
        </form>
        <button
          type="button"
          class="btn btn-outline-secondary ml-2"
          data-dismiss="modal"
        >
          取消
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal-Edit -->
<div
  class="modal fade"
  id="modalEdit"
  tabindex="-1"
  aria-labelledby="edit-form-modal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-form-modal">編輯餐廳資訊</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Input Form -->
        <form method="POST" id="form-edit">
          <div class="form-group">
            <label for="input-name"> 店名（中）</label>
            <input
              type="text"
              class="form-control"
              id="input-name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="input-name_en">店名（英）</label>
            <input
              type="text"
              class="form-control"
              id="input-name_en"
              name="name_en"
              required
            />
          </div>
          <div class="form-row d-flex justify-content-between">
            <div class="form-group col-md-4">
              <label for="input-category">餐廳分類</label>
              <input
                type="text"
                class="form-control"
                id="input-category"
                name="category"
                required
              />
            </div>
            <div class="form-group col-md-4">
              <label for="input-phone">電話</label>
              <input
                type="text"
                class="form-control"
                id="input-phone"
                name="phone"
                required
              />
            </div>
            <div class="form-group col-md-2">
              <label for="input-rating">評價</label>
              <input
                type="number"
                class="form-control"
                id="input-rating"
                name="rating"
                min="0"
                max="5"
                step="0.1"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <label for="input-location">地址</label>
            <input
              type="text"
              class="form-control"
              id="input-location"
              name="location"
              required
            />
          </div>

          <div class="form-group">
            <label for="input-google_map">Google Map</label>
            <input
              type="text"
              class="form-control"
              id="input-google_map"
              name="google_map"
              placeholder="Google Map 連結"
              required
            />
          </div>
          <div class="form-group">
            <label for="input-image">餐聽照片</label>
            <input
              type="text"
              class="form-control"
              id="input-image"
              name="image"
              placeholder="照片連結"
              required
            />
          </div>
          <div class="form-group">
            <label for="input-description">餐廳簡介</label>
            <textarea
              class="form-control"
              id="input-description"
              name="description"
              rows="4"
              required
            ></textarea>
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-outline-info">儲存</button>
            <button
              type="button"
              class="btn btn-outline-secondary ml-2"
              data-dismiss="modal"
            >
              取消
            </button>
          </div>
        </form>
        <!-- End -->
      </div>
    </div>
  </div>
</div>
