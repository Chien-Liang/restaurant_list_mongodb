<!-- Search Bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control"
          placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
          {{#if searchWord}} value="{{ searchWord }}"
          {{/if}} aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Restaurant Cards -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3" title="{{ this.name_en }}">
            <img
              class="card-img-top"
              src="{{ this.image }}"
              alt="{{ this.name }}"
            />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <div class="badges-collection d-flex justify-content-between">
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="link-badges">
                  <a
                    href="#"
                    title="編輯"
                    class="badge badge-pill badge-info px-2 py-1 mx-1"
                    ><i class="fas fa-edit"></i
                  ></a>
                  <a
                    href="#"
                    title="刪除"
                    data-toggle="modal"
                    data-target="#modalDelete"
                    data-usage="delete"
                    data-id="{{ this._id }}"
                    onclick="getIdAndSetupRoute(this)"
                    class="badge badge-pill badge-light border border-secondary px-2 py-1"
                    ><i class="fas fa-trash-alt"></i
                  ></a>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- Modal-Delete -->
<div
  class="modal fade"
  id="modalDelete"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-alert-delete">
          注意！即將刪除餐廳資料！
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <form method="POST" style="display: inline" id="form-delete">
          <button type="submit" class="btn btn-outline-danger">刪除</button>
        </form>
        <button
          type="button"
          class="btn btn-outline-secondary ml-2"
          data-dismiss="modal"
        >
          取消
        </button>
      </div>
    </div>
  </div>
</div>
