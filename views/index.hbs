<!-- Search Bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control"
          placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
          {{#if searchWord}} value="{{ searchWord }}"
          {{/if}} aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Restaurant Cards -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3" title="{{ this.name_en }}">
            <img
              class="card-img-top"
              src="{{ this.image }}"
              alt="{{ this.name }}"
            />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <div class="badges-collection d-flex justify-content-between">
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <div class="link-badges">
                  <!-- The edit button toggle edit-form-modal -->
                  <a
                    href="#"
                    title="編輯"
                    class="badge badge-pill badge-info px-2 py-1 mx-1"
                    data-toggle="modal"
                    data-target="#modalEdit"
                    data-usage="edit"
                    data-id="{{ this._id }}"
                    data-name="{{ this.name }}"
                    data-name_en="{{ this.name_en }}"
                    data-category="{{ this.category }}"
                    data-phone="{{ this.phone }}"
                    data-rating="{{ this.rating }}"
                    data-image="{{ this.image }}"
                    data-google_map="{{ this.google_map }}"
                    data-location="{{ this.location }}"
                    data-description="{{ this.description }}"
                    onclick="getInfo(this)"
                    ><i class="fas fa-edit"></i
                  ></a>
                  <!-- The delete button toggle delete-certify-modal -->
                  <a
                    href="#"
                    title="刪除"
                    class="badge badge-pill badge-light border border-secondary px-2 py-1"
                    data-toggle="modal"
                    data-target="#modalDelete"
                    data-usage="delete"
                    data-id="{{ this._id }}"
                    onclick="getIdAndSetupRoute(this)"
                    ><i class="fas fa-trash-alt"></i
                  ></a>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- Modal-Delete -->
<div
  class="modal fade"
  id="modalDelete"
  tabindex="-1"
  aria-labelledby="delete-certify-modal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-certify-modal">
          注意！即將刪除餐廳資料！
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <form method="POST" style="display: inline" id="form-delete">
          <button type="submit" class="btn btn-outline-danger">刪除</button>
        </form>
        <button
          type="button"
          class="btn btn-outline-secondary ml-2"
          data-dismiss="modal"
        >
          取消
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal-Edit -->
<div
  class="modal fade"
  id="modalEdit"
  tabindex="-1"
  aria-labelledby="edit-form-modal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-form-modal">編輯餐廳資訊</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Input Form -->
        <form method="POST" id="form-edit">
          <div class="form-group">
            <label for="input-name"> 店名（中）</label>
            <input
              type="text"
              class="form-control"
              id="input-name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="input-name_en">店名（英）</label>
            <input
              type="text"
              class="form-control"
              id="input-name_en"
              name="name_en"
              required
            />
          </div>
          <div class="form-row d-flex justify-content-between">
            <div class="form-group col-md-4">
              <label for="input-category">餐廳分類</label>
              <input
                type="text"
                class="form-control"
                id="input-category"
                name="category"
                required
              />
            </div>
            <div class="form-group col-md-4">
              <label for="input-phone">電話</label>
              <input
                type="text"
                class="form-control"
                id="input-phone"
                name="phone"
                required
              />
            </div>
            <div class="form-group col-md-2">
              <label for="input-rating">評價</label>
              <input
                type="number"
                class="form-control"
                id="input-rating"
                name="rating"
                min="0"
                max="5"
                step="0.1"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <label for="input-location">地址</label>
            <input
              type="text"
              class="form-control"
              id="input-location"
              name="location"
              required
            />
          </div>

          <div class="form-group">
            <label for="input-google_map">Google Map</label>
            <input
              type="text"
              class="form-control"
              id="input-google_map"
              name="google_map"
              placeholder="Google Map 連結"
              required
            />
          </div>
          <div class="form-group">
            <label for="input-image">餐聽照片</label>
            <input
              type="text"
              class="form-control"
              id="input-image"
              name="image"
              placeholder="照片連結"
              required
            />
          </div>
          <div class="form-group">
            <label for="input-description">餐廳簡介</label>
            <textarea
              class="form-control"
              id="input-description"
              name="description"
              rows="4"
              required
            ></textarea>
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-outline-info">儲存</button>
            <button
              type="button"
              class="btn btn-outline-secondary ml-2"
              data-dismiss="modal"
            >
              取消
            </button>
          </div>
        </form>
        <!-- End -->
      </div>
    </div>
  </div>
</div>
